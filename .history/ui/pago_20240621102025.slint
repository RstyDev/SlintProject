import { Button, HorizontalBox, TextEdit, ComboBox } from "std-widgets.slint";
export struct MedioPagoSt{
    id: int,
    medio: string,
}
export struct PagoSt {
    monto: int
}
export component Pago {
    in-out property <PagoSt> pago;
    HorizontalBox {
        TextEdit {
            text: "\{root.pago.monto}";
        }
        ComboBox {
            y: 0px;
            width: self.preferred-width;
            height: self.preferred-height;
            model: ["first", "second", "third"];
            current-value: "first";
        }
        Button {
            text: "Cash";
            clicked => { self.text = "Clicked"; }
        }
    }
}